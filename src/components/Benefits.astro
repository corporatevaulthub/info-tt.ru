---
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets';
import { getEntry } from 'astro:content';
const { data } = await getEntry('home', 'benefits');
---

<section class='container mb-10 scroll-mt-24 py-10 md:py-20' id='benefits'>
	<div class='relative mb-[30px] flex flex-col items-start justify-between gap-5 md:flex-row'>
		<h2 class='section-title max-w-[875px] text-dark'>
			<span class='text-primary'>Доставка санкционных</span>
			<br /> грузов из Европы
		</h2>
		<div class='-order-1 flex items-center gap-4 self-end rounded-full border-2 border-[#E5ECF5] px-[18px] py-2 md:order-1 md:self-start'>
			<span class='size-2 rounded-full bg-[#E20B24]'></span>
			<span class='block font-semibold uppercase text-[#302F4C]'>Чем мы поможем</span>
		</div>
	</div>
	<div class='mb-8 grid gap-5 sm:grid-cols-2 xl:grid-cols-4'>
		{
			data.items.map((item, index) => (
				<div class='relative rounded-2xl bg-gray-50 p-5 shadow'>
					<Image src={import(`../assets/images/items/${index}/image.png`)} alt={item.title} class='mb-5 h-[200px] w-full rounded-2xl object-cover' />
					<h3 class='mb-3 font-semibold text-dark'>{item.title}</h3>
					<p class='font-medium'>
						<Fragment set:html={item.description} />
					</p>
				</div>
			))
		}
	</div>
	<div class='flex items-center gap-4'>
		<Icon name='warning' class='size-8 flex-[0_0_36px]' />
		<p class='text-base font-semibold sm:text-xl md:text-2xl'>Мы не работаем с физическими лицами и не производим поиск товаров на заказ!</p>
	</div>
</section>
