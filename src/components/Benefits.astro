---
import { Image } from 'astro:assets';
import { getEntry } from 'astro:content';
const { data } = await getEntry('benefits', 'benefits');
---

<div class="container scroll-mt-24 pb-[60px] sm:pb-[130px]" id="benefits">
  <div class="relative mb-[30px] flex flex-col items-start justify-between gap-5 md:flex-row">
    <h2 class="section-title max-w-[875px] text-dark"><span class="text-primary">Безграничные возможности</span> <br /> для вашего бизнеса</h2>
    <div class="-order-1 flex items-center gap-4 self-end rounded-full border-2 border-[#E5ECF5] px-[18px] py-2 md:order-1 md:self-start">
      <span class="size-2 rounded-full bg-[#E20B24]"></span>
      <span class="block font-semibold uppercase text-[#302F4C]">Возможности</span>
    </div>
  </div>
  <div class="grid gap-5 sm:grid-cols-2 lg:grid-cols-3">
    {
      data.complexArray.map((item, index) => (
        <div class="relative  rounded-[20px] bg-[#F7F7F7] p-5">
          <div class="relative mb-[40px] ">
            <Image src={import(`../assets/benefits/benefits/complexArray/${index}/image.png`)} width={373} height={216} alt={item.title} quality={100} class="w-full rounded-[20px] object-contain sm:w-auto" />
            <span class="absolute left-5 top-5 size-14">
              <Image src={import(`../assets/benefits/${item.icon}.svg`)} width={41} height={41} alt={item.title} class="size-11 text-[#E53737]" />
            </span>
          </div>
          <h3 class="mb-2 text-2xl font-semibold text-dark">{item.title}</h3>
          <p class="font-medium">
            <Fragment set:html={item.description} />
          </p>
        </div>
      ))
    }
  </div>
</div>
